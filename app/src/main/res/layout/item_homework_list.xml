<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homework_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:background="@color/white"
    android:orientation="horizontal">



    <RelativeLayout
        android:id="@+id/rl_yuwen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/white"
        android:paddingTop="@dimen/main_item_margin_left"
        android:paddingBottom="@dimen/main_item_margin_left"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="0.5dp">

        <TextView
            android:id="@+id/homework_yuwen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView27"
            android:layout_alignTop="@+id/textView27"
            android:layout_toEndOf="@+id/textView27"
            android:layout_toRightOf="@+id/textView27"
            android:textSize="@dimen/base_textsize" />

        <ImageView
            android:id="@+id/imageView21"
            android:layout_width="@dimen/homework_item_width"
            android:layout_height="@dimen/homework_item_width"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            app:srcCompat="@mipmap/yuwen" />

        <TextView
            android:id="@+id/textView32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="14dp"
            android:textSize="@dimen/base_textsize"
            android:layout_centerHorizontal="true"
            android:text="语文作业" />

        <TextView
            android:id="@+id/textView27"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageView21"
            android:text="识汉字："
            android:layout_marginTop="10dp"
            android:textSize="@dimen/base_textsize" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignBottom="@+id/rl_yuwen"
        android:background="@color/gray">

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_yingyu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingTop="@dimen/main_item_margin_left"
        android:paddingBottom="@dimen/main_item_margin_left"
        android:layout_marginTop="0.5dp"
        android:background="@color/white"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/rl_yuwen">

        <TextView
            android:id="@+id/homework_yingyu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView43"
            android:layout_alignTop="@+id/textView43"
            android:layout_toEndOf="@+id/textView43"
            android:layout_toRightOf="@+id/textView43"
            android:textSize="@dimen/base_textsize" />

        <ImageView
            android:id="@+id/imageView22"
            android:layout_width="@dimen/homework_item_width"
            android:layout_height="@dimen/homework_item_width"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            app:srcCompat="@mipmap/yingyu" />

        <TextView
            android:id="@+id/textView41"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="14dp"
            android:textSize="@dimen/base_textsize"
            android:layout_centerHorizontal="true"
            android:text="英语作业" />

        <TextView
            android:id="@+id/textView43"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageView22"
            android:text="记单词："
            android:layout_marginTop="10dp"
            android:textSize="@dimen/base_textsize" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignBottom="@+id/rl_yingyu"
        android:background="@color/gray">

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_shuxue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingTop="@dimen/main_item_margin_left"
        android:paddingBottom="@dimen/main_item_margin_left"
        android:layout_marginTop="0.5dp"
        android:layout_marginBottom="20dp"
        android:background="@color/white"
        android:layout_below="@+id/rl_yingyu">

        <TextView
            android:id="@+id/homework_shuxue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView44"
            android:layout_alignTop="@+id/textView44"
            android:layout_toEndOf="@+id/textView44"
            android:layout_toRightOf="@+id/textView44"
            android:textSize="@dimen/base_textsize" />

        <ImageView
            android:id="@+id/imageView23"
            android:layout_width="@dimen/homework_item_width"
            android:layout_height="@dimen/homework_item_width"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            app:srcCompat="@mipmap/shuxue" />

        <TextView
            android:id="@+id/textView42"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="14dp"
            android:textSize="@dimen/base_textsize"
            android:layout_centerHorizontal="true"
            android:text="数学作业" />

        <TextView
            android:id="@+id/textView44"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageView23"
            android:text="做运算："
            android:layout_marginTop="10dp"
            android:textSize="@dimen/base_textsize" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignBottom="@+id/rl_shuxue"
        android:background="@color/gray">

    </RelativeLayout>



</RelativeLayout>