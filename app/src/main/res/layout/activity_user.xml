<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.df.smallwater.smallwater.UserActivity">

    <include
        layout="@layout/base_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/rl_changepwd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mine_item_height"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/imageView27"
            android:layout_width="@dimen/user_item_width"
            android:layout_height="@dimen/user_item_width"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/big_margin"
            app:srcCompat="@mipmap/changepwd" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/big_margin"
            android:layout_toEndOf="@+id/imageView27"
            android:layout_toRightOf="@+id/imageView27"
            android:text="更改密码"
            android:textColor="@color/base_text_color"
            android:textSize="@dimen/base_textsize" />

        <ImageView
            android:id="@+id/imageView30"
            android:layout_width="@dimen/mine_item_into"
            android:layout_height="@dimen/mine_item_into"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/mine_item_margin_left"
            app:srcCompat="@mipmap/right_back" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_width"
        android:background="@color/gray">

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_jihuotime"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mine_item_height">

        <ImageView
            android:id="@+id/imageView28"
            android:layout_width="@dimen/user_item_width"
            android:layout_height="@dimen/user_item_width"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/big_margin"
            app:srcCompat="@mipmap/jihuo" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/imageView28"
            android:layout_toRightOf="@+id/imageView28"
            android:layout_marginLeft="@dimen/big_margin"
            android:textColor="@color/base_text_color"
            android:textSize="@dimen/base_textsize"
            android:text="激活时限" />

        <ImageView
            android:id="@+id/imageView31"
            android:layout_width="@dimen/mine_item_into"
            android:layout_height="@dimen/mine_item_into"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/mine_item_margin_left"
            app:srcCompat="@mipmap/right_back"  />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_width"
        android:background="@color/gray">

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_changeyuanfang"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mine_item_height">

        <ImageView
            android:id="@+id/imageView29"
            android:layout_width="@dimen/user_item_width"
            android:layout_height="@dimen/user_item_width"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/big_margin"
            app:srcCompat="@mipmap/address" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/imageView29"
            android:layout_toRightOf="@+id/imageView29"
            android:layout_marginLeft="@dimen/big_margin"
            android:textColor="@color/base_text_color"
            android:textSize="@dimen/base_textsize"
            android:text="更换园方" />

        <ImageView
            android:id="@+id/imageView32"
            android:layout_width="@dimen/mine_item_into"
            android:layout_height="@dimen/mine_item_into"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/mine_item_margin_left"
            app:srcCompat="@mipmap/right_back"  />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_width"
        android:background="@color/gray">

    </RelativeLayout>


</LinearLayout>
