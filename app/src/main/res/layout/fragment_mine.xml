<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context="com.df.smallwater.smallwater.fragment.MineFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/mine_height"
                android:background="@color/white"
                android:layout_marginBottom="20dp">
            <ImageView
                android:id="@+id/rl_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/mine_bg"
                android:scaleType="fitXY"/>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/gonggo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/mine_item_height"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/imageView9"
                    android:layout_toRightOf="@+id/imageView9"
                    android:text="园内公告"
                    android:layout_centerVertical="true"
                    android:textColor="@color/base_text_color"
                    android:layout_marginLeft="@dimen/mine_item_margin_left"
                    android:textSize="@dimen/base_textsize" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="@dimen/mine_item_into"
                    android:layout_height="@dimen/mine_item_into"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/mine_item_margin_left"
                    android:src="@mipmap/right_back" />

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="@dimen/mine_item_icon"
                    android:layout_height="@dimen/mine_item_icon"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/mine_item_margin_left"
                    android:src="@mipmap/gonggao" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"></RelativeLayout>


            <RelativeLayout
                android:id="@+id/richang"
                android:layout_width="match_parent"
                android:layout_height="@dimen/mine_item_height"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/mine_item_margin_left"
                    android:layout_toEndOf="@+id/imageView11"
                    android:layout_toRightOf="@+id/imageView11"
                    android:text="园内日常"
                    android:textColor="@color/base_text_color"
                    android:textSize="@dimen/base_textsize" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="@dimen/mine_item_into"
                    android:layout_height="@dimen/mine_item_into"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/mine_item_margin_left"
                    android:src="@mipmap/right_back" />

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="@dimen/mine_item_icon"
                    android:layout_height="@dimen/mine_item_icon"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/mine_item_margin_left"
                    android:src="@mipmap/richang" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"></RelativeLayout>
            <RelativeLayout
                android:id="@+id/xinwen"
                android:layout_width="match_parent"
                android:layout_height="@dimen/mine_item_height"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/imageView12"
                    android:layout_toRightOf="@+id/imageView12"
                    android:text="园内新闻"
                    android:textColor="@color/base_text_color"
                    android:layout_marginLeft="@dimen/mine_item_margin_left"
                    android:textSize="@dimen/base_textsize" />

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="@dimen/mine_item_into"
                    android:layout_height="@dimen/mine_item_into"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/mine_item_margin_left"
                    android:src="@mipmap/right_back" />

                <ImageView
                    android:id="@+id/imageView12"
                    android:layout_width="@dimen/mine_item_icon"
                    android:layout_height="@dimen/mine_item_icon"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/mine_item_margin_left"
                    android:src="@mipmap/xinwen" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/qingkuang"
                android:layout_width="match_parent"
                android:layout_height="@dimen/mine_item_height"
                android:background="@color/white"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/imageView10"
                    android:layout_toRightOf="@+id/imageView10"
                    android:text="宝贝状况"
                    android:textColor="@color/base_text_color"
                    android:layout_marginLeft="@dimen/mine_item_margin_left"
                    android:textSize="@dimen/base_textsize" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="@dimen/mine_item_into"
                    android:layout_height="@dimen/mine_item_into"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/mine_item_margin_left"
                    android:src="@mipmap/right_back" />

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="@dimen/mine_item_icon"
                    android:layout_height="@dimen/mine_item_icon"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/mine_item_margin_left"
                    android:src="@mipmap/zhuangkuang" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"></RelativeLayout>
            <RelativeLayout
                android:id="@+id/qingjia"
                android:layout_width="match_parent"
                android:layout_height="@dimen/mine_item_height"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView90"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/imageView100"
                    android:layout_toRightOf="@+id/imageView100"
                    android:text="请假记录"
                    android:textColor="@color/base_text_color"
                    android:layout_marginLeft="@dimen/mine_item_margin_left"
                    android:textSize="@dimen/base_textsize" />

                <ImageView
                    android:id="@+id/imageView50"
                    android:layout_width="@dimen/mine_item_into"
                    android:layout_height="@dimen/mine_item_into"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/mine_item_margin_left"
                    android:src="@mipmap/right_back" />

                <ImageView
                    android:id="@+id/imageView100"
                    android:layout_width="@dimen/mine_item_icon"
                    android:layout_height="@dimen/mine_item_icon"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/mine_item_margin_left"
                    android:src="@mipmap/qingjia" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/zhanghao"
                android:layout_width="match_parent"
                android:layout_height="@dimen/mine_item_height"
                android:background="@color/white"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/imageView13"
                    android:layout_toRightOf="@+id/imageView13"
                    android:text="账号管理"
                    android:textColor="@color/base_text_color"
                    android:layout_marginLeft="@dimen/mine_item_margin_left"
                    android:textSize="@dimen/base_textsize" />

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="@dimen/mine_item_into"
                    android:layout_height="@dimen/mine_item_into"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/mine_item_margin_left"
                    android:src="@mipmap/right_back" />

                <ImageView
                    android:id="@+id/imageView13"
                    android:layout_width="@dimen/mine_item_icon"
                    android:layout_height="@dimen/mine_item_icon"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/mine_item_margin_left"
                    android:src="@mipmap/username" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"></RelativeLayout>
            <RelativeLayout
                android:id="@+id/zhuxiao"
                android:layout_width="match_parent"
                android:layout_height="@dimen/mine_item_height"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/imageView14"
                    android:layout_toRightOf="@+id/imageView14"
                    android:text="注销登陆"
                    android:textColor="@color/base_text_color"
                    android:layout_marginLeft="@dimen/mine_item_margin_left"
                    android:textSize="@dimen/base_textsize" />

                <ImageView
                    android:id="@+id/imageView14"
                    android:layout_width="@dimen/mine_item_icon"
                    android:layout_height="@dimen/mine_item_icon"
                    android:layout_marginLeft="@dimen/mine_item_margin_left"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/exit" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"></RelativeLayout>
            <RelativeLayout
                android:id="@+id/suggestion"
                android:layout_width="match_parent"
                android:layout_height="@dimen/mine_item_height"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_suggestion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/iv_suggestion"
                    android:layout_toRightOf="@+id/iv_suggestion"
                    android:text="联系我们（意见反馈）"
                    android:textColor="@color/base_text_color"
                    android:layout_marginLeft="@dimen/mine_item_margin_left"
                    android:textSize="@dimen/base_textsize" />

                <ImageView
                    android:id="@+id/iv_suggestion"
                    android:layout_width="@dimen/mine_item_icon"
                    android:layout_height="@dimen/mine_item_icon"
                    android:layout_marginLeft="@dimen/mine_item_margin_left"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/suggestion" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"></RelativeLayout>
            <RelativeLayout
                android:id="@+id/vup"
                android:layout_width="match_parent"
                android:layout_height="@dimen/mine_item_height"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_vup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/iv_vup"
                    android:layout_toRightOf="@+id/iv_vup"
                    android:text="版本更新"
                    android:textColor="@color/base_text_color"
                    android:layout_marginLeft="@dimen/mine_item_margin_left"
                    android:textSize="@dimen/base_textsize" />

                <ImageView
                    android:id="@+id/iv_vup"
                    android:layout_width="@dimen/mine_item_icon"
                    android:layout_height="@dimen/mine_item_icon"
                    android:layout_marginLeft="@dimen/mine_item_margin_left"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/vup" />

                <TextView
                    android:id="@+id/tv_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/iv_vup"
                    android:text="当前已是最新版本"
                    android:textColor="@color/red1"
                    android:layout_marginRight="20dp"
                    android:textSize="16sp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"></RelativeLayout>
        </LinearLayout>

    </ScrollView>
</RelativeLayout>
