<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <RelativeLayout
                android:id="@+id/rl_hanzi1"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@color/white"
                android:layout_marginBottom="2dp">


                <TextView
                    android:id="@+id/tv_hanzi_title1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="第1课   认数字 0~4"
                    android:textSize="@dimen/base_textsize" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_hanzi2"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/rl_hanzi1"
                android:background="@color/white"
                android:layout_marginBottom="2dp">


                <TextView
                    android:id="@+id/tv_hanzi_title2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="第2课   认数字 5~9"
                    android:textSize="@dimen/base_textsize" />
            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/rl_hanzi4"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/rl_hanzi3"
                android:layout_marginBottom="2dp"
                android:background="@color/white">


                <TextView
                    android:id="@+id/tv_hanzi_title4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="第4课   加法口诀"
                    android:textSize="@dimen/base_textsize" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_hanzi5"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/rl_hanzi4"
                android:layout_marginBottom="2dp"
                android:background="@color/white">


                <TextView
                    android:id="@+id/tv_hanzi_title5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="第5课   10以内加法测试"
                    android:textSize="@dimen/base_textsize" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_hanzi6"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/rl_hanzi5"
                android:layout_marginBottom="2dp"
                android:background="@color/white">


                <TextView
                    android:id="@+id/tv_hanzi_title6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="第6课   20以内加法测试"
                    android:textSize="@dimen/base_textsize" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_hanzi7"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
