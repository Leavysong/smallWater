                    android:id="@+id/tv_hanzi_title8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="第8课   10以内减法测试"
                    android:textSize="@dimen/base_textsize" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_hanzi9"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/rl_hanzi8"
                android:layout_marginBottom="2dp"
                android:background="@color/white">


                <TextView
                    android:id="@+id/tv_hanzi_title9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="第9课   20以内减法法测试"
                    android:textSize="@dimen/base_textsize" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_hanzi10"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/rl_hanzi9"
                android:background="@color/white">


                <TextView
                    android:id="@+id/tv_hanzi_title10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="第10课   10以内加减法混合测试"
                    android:textSize="@dimen/base_textsize" />
            </RelativeLayout>
            <RelativeLayout
