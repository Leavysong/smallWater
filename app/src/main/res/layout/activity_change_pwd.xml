<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.df.smallwater.smallwater.ChangePwdActivity">


    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:background="@null"
        android:hint="请输入密码"
        android:textSize="@dimen/login_text_size"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="@dimen/edit_margin_width"
        android:layout_marginRight="@dimen/edit_margin_width"
        android:inputType="textPassword" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_width"
        android:layout_alignLeft="@+id/et_password"
        android:layout_alignStart="@+id/et_password"
        android:layout_alignRight="@+id/et_password"
        android:layout_alignEnd="@+id/et_password"
        android:layout_below="@+id/et_password"
        android:background="@color/blue_strong"
        android:layout_marginTop="@dimen/base_margin"
        android:orientation="horizontal"
        android:id="@+id/linearLayout2"></LinearLayout>

    <Button
        android:id="@+id/btn_change_sure"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/btn_height"
        android:layout_alignLeft="@+id/linearLayout2"
        android:layout_alignStart="@+id/linearLayout2"
        android:layout_alignRight="@+id/linearLayout2"
        android:layout_alignEnd="@+id/linearLayout2"
        android:layout_below="@+id/linearLayout2"
        android:background="@drawable/btn_login"
        android:textSize="@dimen/login_text_size"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/large_margin"
        android:text="确认" />

    <include
        layout="@layout/base_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
