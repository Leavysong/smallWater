<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginBottom="2dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/relativeLayout14">

        <RelativeLayout
            android:id="@+id/relativeLayout13"
            android:layout_width="60dp"

            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@mipmap/mizige">

                <TextView
                    android:id="@+id/tv_zi"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_horizontal|center_vertical"
                    android:lineSpacingExtra="10dp"
                    android:textColor="#000000"
                    android:textSize="40sp"
                    android:text="压"/>


            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/relativeLayout13"
            android:layout_toRightOf="@+id/relativeLayout13"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_pinyin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:lineSpacingExtra="10dp"
                    android:textColor="@color/base_text_color"
                    android:layout_marginLeft="20dp"
                    android:textSize="@dimen/base_textsize"
                    android:text="拼音"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_bushou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:lineSpacingExtra="10dp"
                    android:textColor="@color/base_text_color"
                    android:textSize="@dimen/base_textsize"
                    android:layout_marginLeft="20dp"
                    android:text="部首"/>

                <TextView
                    android:id="@+id/tv_bihua"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/tv_bushou"
                    android:layout_toRightOf="@+id/tv_bushou"
                    android:lineSpacingExtra="10dp"
                    android:textColor="@color/base_text_color"
                    android:layout_marginLeft="10dp"
                    android:textSize="@dimen/base_textsize"
                    android:text="笔画" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>






</RelativeLayout>